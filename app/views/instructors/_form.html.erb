<% if @instructor.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>
          <ul>
              <% @instructor.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
  <% end %>

<%= form_for @instructor do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :second_name, "Last Name" %><br>
  <%= f.text_field :second_name %>
  <br>
  <fieldset>
    <legend>Add Course (optional)</legend>
    <%= f.fields_for :courses do |course| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
      <%= course.label :title %><br>
      <%= course.text_field :title %>
      <br>
      <%= course.label :department %><br>
      <%= course.text_field :department%>
      <br>
      <%= course.label :course_number %><br>
      <%= course.text_field :course_number%>
      <br>
      <%= course.label :description %><br>
      <%= course.text_area :description %>
    <% end %>
  </fieldset>

  <%= f.submit %>
<% end %>
