<%= form_for instructor do |f| %>
<% if instructor.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>
          <ul>
              <% instructor.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
  <% end %>
<legend>Instructor</legend>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-group">
  <label>First Name</label><br>
  <%= f.text_field :first_name, class: "form-control" %>
</div>
<div class="form-group">
  <label>Last Name</label><br>
  <%= f.text_field :last_name, class: "form-control" %>
</div>

  <fieldset>
    <legend>Add Courses</legend>
    <%= f.fields_for :courses do |course_fields| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <label>New Course</label>
    <div class="form-group">
      <%= course_fields.label :title %><br>
      <%= course_fields.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= course_fields.label :department %><br>
      <%= course_fields.text_field :department, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= course_fields.label :description %><br>
      <%= course_fields.text_area :description, class: "form-control" %>
    </div>


    <legend>Departments</legend>
    <%= activity_fields.collection_check_boxes(:category_ids, Category.all, :id, :title) do |b| %>
      <%= b.label(class: "label-checkbox") { b.check_box + b.object.title} %>
    <% end %>
    <br><br>
    <% end %>
  </fieldset>

  <%= f.submit class: "btn btn-outline-dark"  %>
<% end %>
