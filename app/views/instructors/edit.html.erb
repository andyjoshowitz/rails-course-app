<h2>Edit Instructor</h2>
<%= form_for @instructor do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :second_name, "Last Name" %><br>
  <%= f.text_field :second_name %>
  <br>
  <%= f.submit %>
<% end %>

<%= button_to "Delete Instructor", @instructor, :method => :delete, class: "btn btn-outline-danger" if !!@instructor.id && (current_user.try(:admin?) || current_user.id == @instructor.user_id) %>
