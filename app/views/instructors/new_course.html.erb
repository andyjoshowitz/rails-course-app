<div class="album bg-light py-5 px-5 my-5">
  <%= form_for @instructor do |f| %>
  <% if @instructor.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this activity from being saved:</h2>
            <ul>
                <% @instructor.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.fields_for :courses, @instructor.courses.build do |course_fields| %>
    <%= course_fields.hidden_field :user_id, value: current_user.id %>
    <legend>New Course</legend>
    <div class="form-group">
      <%= course_fields.label :title %><br>
      <%= course_fields.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= course_fields.label :department %><br>
      <%= course_fields.text_field :department, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= course_fields.label :description %><br>
      <%= course_fields.text_area :description, class: "form-control" %>
    </div>
    <% end %>

    <%= f.submit class: "btn btn-outline-dark" %>
  <% end %>
</div>
