<h1><%= @instructor.first_name%> <%=@instructor.second_name%></h1>
<h5><%=@instructor.overall_rating%></h5>

  <h3>Courses</h3>
    <ol>
      <% @instructor.courses.each do |course| %>
        <li><h3><%= course.department%>-<%=course.title %></h3>
        <p class="card-text"><%= course.description %></p>
          <div class="btn-group">
            <%= button_to "View", course_path(course), method: :get %>
          </div>
          <div class="btn-group">
            <%= button_to "Edit", edit_course_path(course), method: :get, class: "btn btn-sm btn-outline-secondary" if current_user.try(:admin?) || course.user_id == current_user.try(:id) %>
          </div>
          <small class="text-muted">Last updated: <br><%= course.updated_at.strftime("%m/%d/%Y") %></small>
      <% end %></li>
      </ol>
      <br>
      <%= button_to "Add a Course", new_instructor_course_path %> <!--was "link_to" -->
      <%= button_to "Edit Instructor", edit_instructor_path, method: :get, class: "btn btn-sm btn-outline-secondary" if current_user.try(:admin?) || @instructor.user_id == current_user.try(:id) %>
      <br>
